{
  "compilerOptions": {
    "module": "umd",
    "noImplicitAny": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "outDir": "lib",
    "sourceMap": true,
    "target": "es2015",
    "declaration": true,
    "moduleResolution": "node",
    "types": ["node"],
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
