{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "outDir": "lib",
    "sourceMap": true,
    "target": "es2015",
    "declaration": true,
    "moduleResolution": "node",
    "jsx": "react",
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types", "./*.d.ts"],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
